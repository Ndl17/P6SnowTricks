{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}
<style>

.title {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  font-size: 30px;
  color: white;
}

.view {
  position: relative;
  background-size: cover;
  height: 80vw;
  width: 100vw;
}

#gridCards{

  height: 80vw;
  width: 100vw;
}

.edit-icon {
  margin-left: 2px;
  margin-right: 2px;
  margin-top: 2px;
  margin-bottom: 2px;
}

.delete-icon {
  margin-left: 2px;
  margin-right: 2px;
  margin-top: 2px;
  margin-bottom: 2px;
}

.iconEdit:hover, .iconBin:hover {
  transform: scale(1.2);
  z-index: 1;
}

.iconEdit{
  position: absolute;
  top: 100px;
  right: 50px;
  background-color: white;
  border-radius: 5px;
  transition: all 0.3s ease-in-out;
}
.iconBin{
  position: absolute;
  top: 100px;
  right: 100px;
  background-color: white;
  border-radius: 5px;
  transition: all 0.3s ease-in-out;
}



</style>

<body>


  {% include "_partials/_nav.html.twig" %}
  <div class="view" style="background-image: url('https://mdbootstrap.com/img/Photos/Others/images/76.jpg');">


    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <h1 class="title" data-wow-delay="0.4s"><strong>{{ figure.name }}</strong></h1>
          {% if app.user %}
          <div class="iconEdit">
            <a href="#" >
              <i data-acorn-icon="edit" class="text-primary  edit-icon" data-acorn-size="30"></i>
            </a>
          </div>
          <div class="iconBin">
            <a href="#">
              <i data-acorn-icon="bin" class="text-primary  delete-icon" data-acorn-size="30"></i>
            </a>
          </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>

  <div class="row g-2 mt-5">
    <div class="col-12 col-xl-4 mb-5">
      <div class="card bg-gradient-light">
        <div class="h-100 row g-0 card-body align-items-center">
          <div class="col-auto">
            <div class="border border-foreground sw-6 sh-6 rounded-xl d-flex justify-content-center align-items-center">
              <i data-acorn-icon="calendar" class="text-white"></i>
            </div>
          </div>
          <div class="col">
            <div class="heading mb-0 sh-8 d-flex align-items-center lh-1-25 ps-3 text-white">Modifié le </div>
          </div>
          <div class="col-auto ps-3">
            <div class="display-5 text-white">{{ figure.ModifiedAt|date('Y-m-d') }}</div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-12 col-xl-4 mb-5">
      <div class="card active">
        <div class="h-100 row g-0 card-body align-items-center">
          <div class="col-auto">
            <div class="sw-6 sh-6 rounded-xl d-flex justify-content-center align-items-center border border-primary">
              <i data-acorn-icon="loaf" class="text-primary"></i>
            </div>
          </div>
          <div class="col">
            <div class="heading mb-0 sh-8 d-flex align-items-center lh-1-25 ps-3">Type</div>
          </div>
          <div class="col-auto ps-3">
            <div class="display-5 text-primary">{{ figure.type }}</div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-12 col-xl-4 mb-5">
      <div class="card bg-gradient-light">
        <div class="h-100 row g-0 card-body align-items-center">
          <div class="col-auto">
            <div class="border border-foreground sw-6 sh-6 rounded-xl d-flex justify-content-center align-items-center">
              <i data-acorn-icon="calendar" class="text-white"></i>
            </div>
          </div>
          <div class="col">
            <div class="heading mb-0 sh-8 d-flex align-items-center lh-1-25 ps-3 text-white">Modifié le </div>
          </div>
          <div class="col-auto ps-3">
            <div class="display-5 text-white">{{ figure.ModifiedAt|date('Y-m-d') }}</div>
          </div>
        </div>
      </div>
    </div>
  </div>


  <!-- Grid Start -->


  <div class="container">
    <div class="row mt-5">

      <!-- Card img 1 -->

      <div class="col-3">
        <div class="card">


          <button type="button" class="btn btn-primary btnfilm" data-bs-toggle="modal" data-bs-target="#img1">
            <img src="../assets/img/trickshome.png" class="card-img-top sh-19" alt="card image" />
          </button>
        </div>
      </div>

      <!-- Card img 2 -->

      <div class="col-3">
        <div class="card">
          <button type="button" class="btn btn-primary btnfilm" data-bs-toggle="modal" data-bs-target="#img2">
            <img src="../assets/img/trickshome.png" class="card-img-top sh-19" alt="card image" />
          </button>
        </div>
      </div>

      <!-- Card img 3 -->

      <div class="col-3">
        <div class="card mb-5">
          <button type="button" class="btn btn-primary btnfilm" data-bs-toggle="modal" data-bs-target="#img3">
            <img src="../assets/img/trickshome.png" class="card-img-top sh-19" alt="card image" />
          </button>
        </div>
      </div>

      <!-- Card img 4 -->
      <div class="col-3">
        <div class="card mb-5">
          <button type="button" class="btn btn-primary btnfilm" data-bs-toggle="modal" data-bs-target="#img4">
            <img src="../assets/img/trickshome.png" class="card-img-top sh-19" alt="card image" />
          </button>
        </div>
      </div>

    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col">
        <div class="card">
          <div class="card-body">
            <h1 class="text-center font-weight-bold">{{figure.name}}</h1>
            <p class="text-center">{{figure.description}}</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="container mt-5 mb-5">
    <div class="row">
      <div class="col">
        <div class="card">
          <div class="card-body">
            <h1 class="text-center font-weight-bold">Commentaires</h1>
            <p class="text-center">ESPACE POUR LES COMMENTAIRES A CONSTRUIRE</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Grid End -->





</body>
{% endblock %}
{% block footer %}
{% include "_partials/_footer.html.twig" %}
{% endblock %}
